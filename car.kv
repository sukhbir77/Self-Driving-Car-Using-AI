#:kivy 1.0.9

<Car>:
    size: 20,10
    canvas: 
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Front_Sensor_Ball>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,0,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Left_Sensor_Ball>:
    size: 10,10
    canvas:
        Color:
            rgba: 0,1,1,1
        Ellipse:
            pos: self.pos
            size: self.size

<Right_Sensor_Ball>:
    size: 10,10
    canvas:
        Color:
            rgba: 1,1,0,1
        Ellipse:
            pos: self.pos
            size: self.size

<Game>:
    car: game_car
    front_sensor_ball: game_front_sensor_ball
    left_sensor_ball: game_left_sensor_ball
    right_sensor_ball: game_right_sensor_ball
    
    Car:
        id: game_car
        center: self.parent.center
        
    Front_Sensor_Ball:
        id: game_front_sensor_ball
        center: self.parent.center
    
    Left_Sensor_Ball:
        id: game_left_sensor_ball
        center: self.parent.center
    
    Right_Sensor_Ball:
        id: game_right_sensor_ball
        center: self.parent.center
        
                